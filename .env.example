# Database Configuration
DATABASE_URL=mysql://gpu_saviors_user:your_password_here@localhost:3306/gpu_saviors_db
DB_PASSWORD=your_secure_password_here
DB_ROOT_PASSWORD=your_root_password_here

# JWT Configuration
JWT_ACCESS_KEY_SECRET=your_jwt_access_secret_key_here_minimum_32_chars
JWT_REFRESH_KEY_SECRET=your_jwt_refresh_secret_key_here_minimum_32_chars

# Server Configuration
PORT=8080
NODE_ENV=production

# CORS Configuration
